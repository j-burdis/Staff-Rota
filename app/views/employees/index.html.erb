<div class="container mx-auto p-4">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-2xl font-bold">All Employees</h2>
    <%= link_to 'Add New Employee', new_employee_path, class: 'btn btn-primary' %>
  </div>

  <div>
    <% @employees.each do |employee| %>
      <div class="flex items-center justify-between p-2 border-b hover:bg-gray-100">
        <%= link_to employee_path(employee), class: 'flex-grow' do %>
          <span class="<%= employee.active? ? 'text-black' : 'text-gray-400 line-through' %>">
            <%= employee.name %>
          </span>
          <% if employee.active? %>
            <span class="text-green-600"> - Active</span>
          <% else %>
            <span class="text-red-600"> - Inactive</span>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>