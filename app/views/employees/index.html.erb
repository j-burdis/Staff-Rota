<!-- app/views/employees/index.html.erb -->
<div 
  data-controller="employees" 
  class="employees-container">
  
  <div 
    data-employees-target="list" 
    class="employees-list">
    <div class="employees-list-header">
      <h2>All Staff</h2>
      <a href="#" class="btn btn-primary" data-action="click->employees#showNewEmployeeForm">Add Staff</a>
    </div>

    <div class="employee-list-contents">
      <% @employees.each do |employee| %>
        <div 
          id="employee_<%= employee.id %>"
          class="employees-list-item" 
          data-action="click->employees#showEmployee">
          <span 
            data-employee-id="<%= employee.id %>" 
            class="employees-list-item-name <%= employee.active? ? '' : 'inactive' %>">
            <%= employee.name %>
            <% if employee.active? %>
              <span class="employees-list-item-status-active"> - Active</span>
            <% else %>
              <span class="employees-list-item-status-inactive"> - Inactive</span>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </div>

  <div class="employees-details">
    <div 
      data-employees-target="details"
      id="employee-details"
      class="employees-show-container">
      <!-- Employee details will be loaded here -->

      <div class="employee-placeholder">
        <div class="placeholder-icon">ðŸ‘¤</div>
        <h3>Select an employee</h3>
        <p>Click on an employee from the list to view their details</p>
      </div>
    </div>
    
    <div 
      data-employees-target="editForm">
      <!-- Edit form will be loaded here -->
    </div>
  </div>
</div>
