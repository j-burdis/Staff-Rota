<!-- app/views/employees/show.html.erb -->
<div class="employees-show-container">
  <h2 class="employees-show-title"><%= @employee.name %></h2>
  
  <div class="employees-show-status">
    <strong>Status:</strong> 
    <span class="<%= @employee.active? ? 'employees-list-item-status-active' : 'employees-list-item-status-inactive' %>">
      <%= @employee.active? ? 'Active' : 'Inactive' %>
    </span>
  </div>

  <div class="employees-show-actions">
    <a 
      href="#" 
      data-action="click->employees#editEmployee" 
      class="btn btn-secondary">
      Edit
    </a>
    
    <% if @employee.active? %>
      <%= button_to 'Deactivate', deactivate_employee_path(@employee), 
          method: :patch, 
          class: 'btn btn-warning', 
          data: { confirm: 'Are you sure you want to deactivate this employee?' } %>
    <% else %>
      <%= button_to 'Reactivate', reactivate_employee_path(@employee), 
          method: :patch, 
          class: 'btn btn-success', 
          data: { confirm: 'Are you sure you want to reactivate this employee?' } %>
    <% end %>
    
    <%= button_to 'Delete', employee_path(@employee), 
        method: :delete, 
        class: 'btn btn-danger', 
        data: { confirm: 'Are you sure you want to permanently delete this employee?' } %>
  </div>
</div>
