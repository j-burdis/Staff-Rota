<h1>Schedule for <%= @schedule.date.strftime("%A, %B %d, %Y") %></h1>

<div class="navigation">
  <%= link_to "Back to Calendar", schedules_path(year: @schedule.date.year, month: @schedule.date.month) %>
  <%= link_to "Edit Schedule", edit_schedule_path(@schedule.date) %>
</div>

<div class="default-hours">
  <p>Default working hours for <%= @schedule.day_of_week %>: <%= @schedule.default_hours %> hours</p>
</div>

<h2>Assigned Employees</h2>
<% if @schedule.employees.any? %>
  <ul class="employee-list">
    <% @schedule.employees.each do |employee| %>
      <li>
        <%= employee.name %>
        (<%= @schedule.employee_schedules.find_by(employee_id: employee.id).hours_worked %> hours)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No employees assigned for this day.</p>
<% end %>
