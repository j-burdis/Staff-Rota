<div class="months-calendar" data-controller="schedule">
  <div class="months-list">
    <div class="year-navigation">
      <%= link_to "←", schedules_path(year: @year - 1), class: "btn" %>
      <h2 class="current-year"><%= @year %></h2>
      <%= link_to "→", schedules_path(year: @year + 1), class: "btn" %>
    </div>
    <% (1..12).each do |m| %>
      <% month_name = Date::MONTHNAMES[m] %>
      <% is_selected = (@year == @selected_year && m == @selected_month) %>
      <%= link_to month_name, schedules_path(year: @year, month: m), class: "month-link #{is_selected ? 'selected-month' : ''}" %>
    <% end %>
  </div>

  <%= render partial: 'calendar', locals: {
    year: @year, 
    month: @month, 
    previous_month: @previous_month, 
    next_month: @next_month 
  } %>

  <div 
    class="edit-panel" 
    data-schedule-target="editPanel"
  >
    <div class="edit-placeholder">
      <p>Select a date to edit</p>
    </div>
  </div>
</div>
